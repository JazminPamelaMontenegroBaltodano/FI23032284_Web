@model BinCalc.Models.BinaryViewModel
@{
    ViewData["Title"] = "BinCalc";
}

<div class="container" style="max-width:880px; margin-top:24px;">
    <h1 class="mb-3">Calculadora Binaria</h1>
    <p>Ingrese dos cadenas binarias (a y b). Longitud: 2, 4, 6 u 8. Solo 0 y 1.</p>

    <form asp-action="Index" method="post" class="mb-4">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <div class="row g-3">
            <div class="col-sm-6">
                <label asp-for="Input.A" class="form-label">a</label>
                <input asp-for="Input.A" class="form-control" />
                <span asp-validation-for="Input.A" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Input.B" class="form-label">b</label>
                <input asp-for="Input.B" class="form-control" />
                <span asp-validation-for="Input.B" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Calcular</button>
        @Html.AntiForgeryToken()
    </form>

    @if (Model?.Rows != null)
    {
        <h2>Resultados</h2>
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th></th>
                    <th>Bin</th>
                    <th>Oct</th>
                    <th>Dec</th>
                    <th>Hex</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Rows)
                {
                    <tr>
                        <td>@r.Label</td>
                        <td><code>@r.Bin</code></td>
                        <td>@r.Oct</td>
                        <td>@r.Dec</td>
                        <td>@r.Hex</td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="text-muted small">Nota: “a” y “b” se muestran con 8 bits. El resto de operaciones se muestra sin ceros a la izquierda.</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
